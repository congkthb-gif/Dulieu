        <!-- Modal thành công -->
        <div id="successModal" class="hidden fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-50 px-4">
            <div class="bg-gray-800 rounded-2xl p-10 max-w-sm w-full text-center border border-gray-700">
