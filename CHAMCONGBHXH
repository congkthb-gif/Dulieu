    <main class="container mx-auto px-4 py-8 max-w-md">
        <div class="bg-gradient-to-br from-gray-800 via-gray-900 to-black rounded-2xl shadow-2xl border border-gray-700 p-8">

            <div class="text-center mb-10">
                <h1 class="text-3xl font-bold text-white">Chấm Công Nhanh</h1>
                <p class="text-gray-400 mt-2">Bấm nút để chấm công ngay</p>
            </div>

            <!-- 2 NÚT CHÍNH -->
            <div class="grid grid-cols-2 gap-6 mb-10">
                <button id="btnVaoLam" class="btn-in text-white font-bold text-2xl py-10 rounded-2xl shadow-2xl transform transition hover:scale-105 active:scale-95 flex flex-col items-center relative overflow-hidden">
                    <span id="textVaoLam">
                        <i data-feather="log-in" class="w-14 h-14 mb-3 inline"></i><br>
                        VÀO LÀM
                    </span>
                    <span id="loadingVaoLam" class="hidden absolute inset-0 flex flex-col items-center justify-center">
                        <svg class="animate-spin h-12 w-12 text-white mb-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span class="text-lg">Đang chấm...</span>
                    </span>
                </button>

                <button id="btnTanLam" class="btn-out text-white font-bold text-2xl py-10 rounded-2xl shadow-2xl transform transition hover:scale-105 active:scale-95 flex flex-col items-center relative overflow-hidden">
