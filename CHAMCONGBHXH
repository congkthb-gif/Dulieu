    <script>
        feather.replace();

        // THAY LINK WEB APP MỚI SAU KHI DEPLOY
        const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbz28ZBa3kl9-JIiOs7QdCtpCzV_P-4k1CmwBAlFOyoD61RCqkxj-co87A-iwA3-e5YI/exec";

        // Format ngày sinh
        document.getElementById('birthdate').addEventListener('input', function(e) {
            let v = e.target.value.replace(/\D/g, '');
            if (v.length >= 3) v = v.slice(0,2) + '/' + v.slice(2);
            if (v.length >= 6) v = v.slice(0,5) + '/' + v.slice(5,9);
            e.target.value = v.slice(0,10);
        });

        function isValidDate(str) {
            if (!/^\d{2}\/\d{2}\/\d{4}$/.test(str)) return false;
            const [d, m, y] = str.split('/').map(Number);
            const date = new Date(y, m-1, d);
            return date.getDate() === d && date.getMonth() === m-1 && date.getFullYear() === y;
        }

        function sendData(hanhDong, btnId) {
            const fullname = document.getElementById('fullname').value.trim();
            const birthdate = document.getElementById('birthdate').value.trim();
            const department = document.getElementById('department').value;

            if (!fullname || !birthdate || !department) {
                alert('Vui lòng điền đầy đủ thông tin!');
                return;
            }
            if (!isValidDate(birthdate)) {
                alert('Ngày sinh không hợp lệ!\nVui lòng nhập đúng định dạng dd/mm/yyyy');
                return;
            }

            const now = new Date();

            // Tách riêng Ngày và Giờ
            const ngay = now.toLocaleDateString('vi-VN'); // 01/12/2025
            const gio = now.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit', second: '2-digit' }); // 14:30:25

            // Hiển thị loading
            const textSpan = btnId === 'btnVaoLam' ? 'textVaoLam' : 'textTanLam';
            const loadingSpan = btnId === 'btnVaoLam' ? 'loadingVaoLam' : 'loadingTanLam';
            const btn = document.getElementById(btnId);

            document.getElementById(textSpan).classList.add('hidden');
            document.getElementById(loadingSpan).classList.remove('hidden');
            btn.classList.add('btn-loading');

            fetch(WEB_APP_URL, {
                method: 'POST',
                mode: 'no-cors',
                headers: { 'Content-Type': 'text/plain' },
                body: JSON.stringify({
                    ngay: ngay,
                    gio: gio,
                    action: hanhDong,
                    fullname: fullname,
                    birthdate: birthdate,
                    department: department
                })
            })
            .then(() => {
                document.getElementById('modalAction').textContent = hanhDong;
                document.getElementById('modalTime').textContent = `${ngay} - ${gio}`;
                document.getElementById('successModal').classList.remove('hidden');
                document.getElementById('form').reset();

                setTimeout(() => {
                    document.getElementById(textSpan).classList.remove('hidden');
                    document.getElementById(loadingSpan).classList.add('hidden');
                    btn.classList.remove('btn-loading');
                }, 800);
            })
            .catch(() => {
                alert('Lỗi kết nối! Vui lòng thử lại.');
                document.getElementById(textSpan).classList.remove('hidden');
                document.getElementById(loadingSpan).classList.add('hidden');
                btn.classList.remove('btn-loading');
            });
        }

        document.getElementById('btnVaoLam').onclick = () => sendData('Vào làm', 'btnVaoLam');
        document.getElementById('btnTanLam').onclick  = () => sendData('Tan làm', 'btnTanLam');

        function closeSuccessModal() {
            document.getElementById('successModal').classList.add('hidden');
        }
        document.getElementById('successModal').onclick = e => e.target === this && closeSuccessModal();
    </script>
</body>
</html>
